div.col-md-4
  ul
    li(ng-repeat='user in users') {{user.name}}

div.col-md-4
  ul
    li(ng-repeat='message in messages')
      p {{message.text}} // {{message.user.name}}
  form(ng-submit="addMessage()")
    input(type='text', ng-model='newMessage')
    input(type='submit')

div.col-md-4
  form(ng-submit="privatemessage()")
    input(type='text', ng-model='to')
    input(type='text', ng-model='newMessage')
    input(type='submit')