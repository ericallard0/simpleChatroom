div.col-md-4
  h2 Connected users:
  ul
    li(ng-repeat='user in users') {{user.name}}

div.col-md-4
  h2 Messages:
  ul
    li(ng-repeat='message in messages')
      p {{message.text}} // {{message.user.name}}
  form(ng-submit="addMessage()")
    input(type='text', ng-model='newMessage')
    input(type='submit')

div.col-md-4
  h2 Chatroom: "{{user.chatroom}}"
  form(ng-submit="goToChatroom()")
    input(type='text', ng-model='newChatroom')
    input(type='submit')